                android:padding="17dp">

                <ImageView
                    android:id="@+id/product_image1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/lime_chicken" />

