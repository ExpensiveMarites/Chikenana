                        android:text="Lime Chicken Thigh"
                        android:textColor="@color/redishbrown"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/product_price1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Price: ₱250"
                        android:textColor="@color/redishbrown"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/quantity_cart1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Quantity"
                        android:textColor="@color/redishbrown"
                        android:textSize="14sp" />

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/delete_item_btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete Item"
                    app:icon="@drawable/baseline_delete_24"
                    app:iconTint="@color/redishbrown"
                    app:iconPadding="8dp"
                    app:iconGravity="textStart"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    app:backgroundTint="@color/redishbrown" />

